@model InvoiceAndStorage.Web.ViewModels.Invoice.InvoiceViewModel

@{
    ViewData["Title"] = "CreateInvoice";
}

<h1>CreateInvoice</h1>

<h4>CreateBuyerInvoiceViewModel</h4>
<hr />
<div class="flex-fill">
    <div class="flex-column align-content-center">
        <form asp-action="CreateInvoice" asp-controller="Invoice">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="d-flex justify-content-center">
                <div class="form-group p-4">
                    <label asp-for="BuyerIdentificationNumber" class="control-label"></label>
                    <input asp-for="BuyerIdentificationNumber" class="form-control" />
                    <span asp-validation-for="BuyerIdentificationNumber" class="text-danger"></span>
                </div>
                <div class="form-group p-4 dropdown">
                    <label asp-for="PaymentMethod" class="control-label"></label>
                    <input asp-for="PaymentMethod" class="form-control" />
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>
                <div class="form-group p-4">
                    <label asp-for="InvoiceTipe" class="control-label"></label>
                    <input asp-for="InvoiceTipe" class="form-control" />
                    <span asp-validation-for="InvoiceTipe" class="text-danger"></span>
                </div>
            </div>
            <div class="flex-fill justify-content-center">
                <table class="table table-hover">
                    <thead class="align-items-center">
                        <tr>
                            <th>
                                Product name
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Quantity
                            </th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model.InvoiceProductViewModels)
                        {
                            <tr>
                                <td>
                                    @item.ProductName
                                </td>
                                <td>
                                    @item.Amount
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    <input class="input-" type="number" />
                                </td>
                                <td>
                            </tr>
                            <br />
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>