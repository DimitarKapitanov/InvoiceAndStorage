@model InvoiceAndStorage.Web.ViewModels.Invoice.AllInvoiceViewModel

@{
    ViewData["Title"] = "Издадени фактури";
}

<h1>Издадени фактури</h1>

<p>
    <a asp-action="CreateInvoice" class="btn btn-primary">Създай нова фактура</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Име на куповача</th>
            <th>Дата на издаване</th>
            <th>Номер на фактурата</th>
            <th>Създана от</th>
            <th>Стойност на фактурата</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.InvoiceViewModels)
        {
            <tr>
                <td>
                    <label asp-for="@item.BuyerName">@item.BuyerName</label>
                </td>
                <td>
                    <label asp-for="@item.InvoiceDate">@item.InvoiceDate.ToString("dd.MM.yyyy")</label>
                </td>
                <td>
                    <label asp-for="@item.InvoiceNumber">@item.InvoiceNumber</label>
                </td>
                <td>
                    <label asp-for="@item.UserName">@item.UserName</label>
                </td>
                <td>
                    <label asp-for="@item.TotalInvoiceSum">@item.TotalInvoiceSum.ToString("F2")</label>
                </td>
                <td>
                    <a asp-controller="SoldProduct" asp-action="InvoiceSoldProducts" asp-route-id="@item.InvoiceNumber" class="btn btn-primary">Детайли по фактура</a>
                </td>
            </tr>
        }
    </tbody>
</table>
